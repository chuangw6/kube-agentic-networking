                                                  {
                                                    "and_rules": {
                                                      "rules": [
                                                        {
                                                          "sourced_metadata": {
                                                            "metadata_matcher": {
                                                              "filter": "mcp_proxy",
                                                              "path": [
                                                                {
                                                                  "key": "method"
                                                                }
                                                              ],
                                                              "value": {
                                                                "or_match": {
                                                                  "value_matchers": [
                                                                    {
                                                                      "string_match": {
                                                                        "exact": "initialize"
                                                                      }
                                                                    },
                                                                    {
                                                                      "string_match": {
                                                                        "exact": "notifications/initialized"
                                                                      }
                                                                    },
                                                                    {
                                                                      "string_match": {
                                                                        "exact": "tools/list"
                                                                      }
                                                                    }
                                                                  ]
                                                                }
                                                              }
                                                            }
                                                          }
                                                        }
                                                      ]
                                                    }
                                                  }
                                                ],
                                                "principals": [
                                                  {
                                                    "any": true
                                                  }
                                                ]
                                              },
                                              "allow-http-get": {
                                                "permissions": [
                                                  {
                                                    "header": {
                                                      "name": ":method",
                                                      "string_match": {
                                                        "exact": "GET"
                                                      }
                                                    }
                                                  }
                                                ],
                                                "principals": [
                                                  {
                                                    "any": true
                                                  }
                                                ]
                                              },
                                              "allow-mcp-session-close": {
                                                "permissions": [
                                                  {
                                                    "any": true
                                                  }
